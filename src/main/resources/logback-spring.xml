<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <logger name="com.bwg" level="DEBUG"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework" level="WARN"/>
    <logger name="org.springframework.web" level="WARN"/>
    <logger name="org.springframework.context.annotation" level="WARN"/>
    <logger name="org.springframework.data.repository.config" level="WARN"/>
    <logger name="org.springframework.beans.factory.support" level="WARN"/>
    <logger name="org.springframework.cloud.aws.messaging.listener" level="WARN"/>
    <logger name="org.springframework.context.support" level="WARN"/>
    <logger name="org.springframework.orm.jpa" level="WARN"/>
    <logger name="org.springframework.data.convert" level="WARN"/>
    <logger name="com.netflix.discovery" level="WARN"/>
    <logger name="org.springframework.data.repository.core.support" level="WARN"/>
    <logger name="org.springframework.data.jpa.repository.query" level="WARN"/>
    <logger name="org.springframework.core.env" level="WARN"/>

    <!-- Console Appender -->
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %(%d{yy-MM-dd E HH:mm:ss.SSS}) | %highlight(%red(%-5level)) | %boldYellow([%X{traceId}/%X{spanId}]) | %boldCyan([%8.15t]){cyan} | %highlight(%blue(%logger)) | %(%m){faint}%n
            </Pattern>
        </layout>
    </appender>

    <!-- File Appender -->
<!--    <appender name="FileAppender"-->
<!--              class="ch.qos.logback.core.rolling.RollingFileAppender">-->
<!--        <file>/opt/bwg-service/logs/bwg-service.log</file>-->
<!--        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">-->
<!--            <fileNamePattern>/opt/bwg-service/logs/bwg-service.%d{yyyy-MM-dd}.log</fileNamePattern>-->
<!--            <maxHistory>30</maxHistory>-->
<!--        </rollingPolicy>-->
<!--        <encoder>-->
<!--            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>-->
<!--        </encoder>-->
<!--    </appender>-->

    <!-- Root Logger -->
    <root level="info">
        <appender-ref ref="Console" />
<!--        <appender-ref ref="FileAppender" />-->
    </root>

    <!-- Logger for com.bwg -->
    <logger name="com.bwg" level="trace" additivity="false">
        <appender-ref ref="Console" />
<!--        <appender-ref ref="FileAppender" />-->
    </logger>

</configuration>
